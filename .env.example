# ============================================================================
# Autonomous Research Agent - Environment Configuration
# ============================================================================
#
# Copy this file to .env and fill in your actual API keys and settings
#

# ============================================================================
# Required API Keys
# ============================================================================

# Anthropic API Key (Required)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_api_key_here

# ============================================================================
# Optional API Keys
# ============================================================================

# Tavily API Key (Optional, but recommended for web search)
# Get your key at: https://tavily.com/
# Without this, the web search tool will not be available
TAVILY_API_KEY=your_tavily_key_here

# Voyage API Key (Optional, for better embeddings)
# Get your key at: https://www.voyageai.com/
# If not set, will fall back to using Anthropic for embeddings
VOYAGE_API_KEY=your_key_here

# ============================================================================
# Agent Configuration
# ============================================================================

# Maximum number of iterations the agent can perform
AGENT_MAX_ITERATIONS=50

# How often to trigger reflection (every N iterations)
AGENT_REFLECTION_INTERVAL=5

# Maximum tokens for context retrieval from memory
AGENT_MAX_CONTEXT_TOKENS=8000

# Enable automatic reflection triggers
AGENT_ENABLE_AUTO_REFLECTION=true

# Maximum memory items to retain
AGENT_MAX_MEMORY_ITEMS=1000

# ============================================================================
# LLM Configuration
# ============================================================================

# Anthropic model to use
# Options: claude-opus-4-20250514, claude-sonnet-4-20250514, claude-3-7-sonnet-20250219
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# Embedding model to use
# Options: voyage-3, voyage-3-lite, voyage-code-3
EMBEDDING_MODEL=voyage-3

# ============================================================================
# Storage Configuration
# ============================================================================

# SQLite database path for document storage
SQLITE_DB_PATH=./storage/sqlite/agent.db

# ChromaDB configuration for vector storage
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_AUTH_TOKEN=your-secure-token-here
CHROMA_PERSIST_DIR=./storage/chroma

# ============================================================================
# Logging Configuration
# ============================================================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Directory for log files
LOG_DIR=./storage/logs